<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_sign_up_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tundora"
        android:elevation="5dp"/>
    <TextView
        android:id="@+id/enter_username_text_view_sign_up_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter a username and a valid email address"
        android:textSize="20sp"
        android:layout_below="@id/toolbar_sign_up_page"
        android:layout_margin="20dp"
        />

    <EditText
        android:id="@+id/username_edit_text_sign_up_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_rectangle_tundora"
        android:layout_below="@id/enter_username_text_view_sign_up_page"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:minHeight="50dp"
        android:hint="Username"
        android:lines="1"
        android:padding="15dp"/>
    <EditText
        android:id="@+id/email_edit_text_sign_up_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/username_edit_text_sign_up_page"
        android:minHeight="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:hint="Email address"
        android:inputType="textEmailAddress"
        android:background="@drawable/round_rectangle_tundora"
        android:layout_marginTop="20dp"
        android:lines="1"

        android:padding="15dp"/>
    <ImageButton
        android:id="@+id/continue_image_button_sign_up_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_tundora_40dp"
        android:layout_below="@id/email_edit_text_sign_up_page"
        android:layout_margin="20dp"
        android:src="@drawable/ic_next_button_mine_shaft_20x20"
        android:clickable="false"
        android:padding="10dp"
        android:elevation="3dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_appify_logo_30x42"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="15dp"/>



</RelativeLayout>