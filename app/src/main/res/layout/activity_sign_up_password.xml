<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_sign_up_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tundora"
        android:elevation="5dp"/>
    <TextView
        android:id="@+id/enter_password_text_view_sign_up_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter a password"
        android:textSize="20sp"
        android:layout_below="@id/toolbar_sign_up_password"
        android:layout_margin="20dp"
        />
    <TextView
        android:id="@+id/password_description_text_view_sign_up_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tundora"
        android:text="Password length must be at least 8 and contain at-least one number , one upper case letter and one special character"
        android:layout_below="@+id/enter_password_text_view_sign_up_password"
        android:layout_marginBottom="20dp"
        android:padding="15dp"
        android:textSize="18sp"

        />

    <EditText
        android:id="@+id/password_edit_text_sign_up_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_rectangle_tundora"
        android:layout_below="@id/password_description_text_view_sign_up_password"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:minHeight="50dp"
        android:inputType="textPassword"
        android:hint="Password"
        android:lines="1"

        android:padding="15dp"/>
    <EditText
        android:id="@+id/repeat_password_edit_text_sign_up_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/password_edit_text_sign_up_password"
        android:minHeight="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:hint="Repeat password"
        android:inputType="textPassword"
        android:background="@drawable/round_rectangle_tundora"
        android:layout_marginTop="20dp"
        android:lines="1"
        android:padding="15dp"/>

    <Button
        android:id="@+id/sign_up_button_sign_in_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/repeat_password_edit_text_sign_up_page"
        android:layout_margin="20dp"
        android:background="@drawable/round_rectangle_tundora"
        android:clickable="false"
        android:elevation="3dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:padding="10dp"
        android:text="Sign up"
        android:textAllCaps="false"
        android:textColor="@color/silver"
        android:textSize="17sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_appify_logo_30x42"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="15dp"/>

</RelativeLayout>